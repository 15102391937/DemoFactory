    <!-- dialog弹窗样式 ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->

    <!-- dialog框背景透明，可自定义dialog框（比如圆角），没有默认Title占位置，且界面有蒙层 -->
    <style name="ComWinTransBackHalfDia" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item> <!--wind无标题占位置-->
        <item name="android:windowFrame">@null</item> <!--wind的边框-->
        <item name="android:windowIsTranslucent">false</item> <!--设置为true可能导致activity透明-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--wind背景透明，不设置它有默认背景的-->
        <item name="android:backgroundDimEnabled">true</item> <!--是否有蒙层，true表示有-->
        <item name="android:backgroundDimAmount">0.4</item> <!--蒙层透光度, 值越小蒙层越透明-->
    </style>

    <!-- 没有蒙层，适合加载动画弹窗用 -->
    <style name="TransparentDialog" parent="ComWinTransBackHalfDia">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 加载转圈动画弹窗 -->
    <style name="LoadingDialog" parent="TransparentDialog" />

